<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MainActivity"
    style="@style/CardView.Dark">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/eletric_car"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="16dp"/>

    <TextView
        android:id="@+id/tab_carros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carros"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="@id/titulo"
        app:layout_constraintTop_toBottomOf="@id/titulo"/>

    <TextView
        android:id="@+id/tab_favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favoritos"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/tab_carros"
        app:layout_constraintLeft_toRightOf="@id/tab_carros"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_lista_carro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"

        app:layout_constraintTop_toBottomOf="@id/tab_carros"
        app:layout_constraintBottom_toTopOf="@id/button_goto_calcular"
        tools:listitem="@layout/carro_item"
        />

    <Button
        android:id="@+id/button_goto_calcular"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:text="calcular autonomia                            >>>"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>